@page "/DisplayPrincipal"
@inject NavigationManager NavigationManager

<h3>Display Principal</h3>

<div class="d-flex gap-3 mt-4">
    <button class="btn btn-primary" @onclick="GoToDiagram">Diagram</button>
    <button class="btn btn-secondary" @onclick="GoToStatus">Status</button>
</div>

@code {
    private void GoToDiagram()
    {
        NavigationManager.NavigateTo("/Diagram");
    }

    private void GoToStatus()
    {
        NavigationManager.NavigateTo("/Status");
    }
}