@page "/RegisterUser"
@using System.ComponentModel.DataAnnotations
@using Backend.Domain
@using Backend.DTOs.UserDTOs
@using Backend.Service
@inject NavigationManager NavigationManager
@inject UserService UserService


<PageTitle>Register User - TaskTrackPro</PageTitle>


          <form>
            <h3 class="mb-3">Create User</h3>

            <div class="mb-3">
              <label class="form-label">Name</label>
              <InputText class="form-control" placeholder="Enter your name" @bind-Value="_newUser.Name" required />
            </div>

            <div class="mb-3">
              <label class="form-label">Last name</label>
              <InputText class="form-control" placeholder="Enter your last name" @bind-Value="_newUser.LastName"  />
            </div>

            <div class="mb-3">
              <label class="form-label">Email address</label>
              <InputText type="email" class="form-control" placeholder="name@example.com" @bind-Value="_newUser.Email" required />
            </div>

            <div class="mb-3">
              <label class="form-label">Date of Birth</label>
              <InputDate class="form-control" @bind-Value="_newUser.BirthDate"  />
              <div class="form-text text-muted">Select your birth date (18-100 years old)</div>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Password</label>
              <InputText type="password" class="form-control" @bind-Value="_newUser.Password" required/>
              <div class="form-text">
                Your password must:
                <ul class="mb-0 ps-3 mt-1">
                  <li>Be at least 8 characters long</li>
                  <li>Include uppercase and lowercase letters</li>
                  <li>Include at least one number</li>
                  <li>Include at least one special character</li>
                </ul>
              </div>
            </div>
            
            <div class="mb-3">
              <label class="form-label">User Type</label>
              <InputRadioGroup @bind-Value="_newUser.Admin">
                <div class="form-check">
                  <InputRadio class="form-check-input" Value="false" />
                  <label class="form-check-label">Regular User</label>
                </div>
                <div class="form-check">
                  <InputRadio class="form-check-input" Value="true" />
                  <label class="form-check-label">System Administrator</label>
                </div>
              </InputRadioGroup>
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
            </div>
          </form>

@code {
    private UserDataDTO _newUser = new UserDataDTO();
    
    private void CreateAccount()
    {
        try
        {
            User validateUser = _newUser.ToEntity();
            UserService.AddUser(_newUser);
            NavigationManager.NavigateTo("/Login");
        }
        catch (Exception ex)
        {
          
        }
    }
    

}